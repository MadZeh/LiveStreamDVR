{
  "name": "twitchautomator",
  "version": "3.0.0",
  "description": "*Note that this thing is written without a framework or any real standards, so the code is pretty messy. Might refactor it one day with html templates and such.*",
  "main": "src/Client/main.ts",
  "private": true,
  "scripts": {
    "watch:style": "node-sass --source-map true --source-map-embed --watch ./src/Assets/style.scss --output ./public/assets/",
    "build:style": "node-sass --output-style compressed ./src/Assets/style.scss --output ./public/assets/",
    "build:client": "webpack --config webpack.config.js",
    "serve:server": "php -S localhost:8080 -t public",
    "serve:client": "webpack-dev-server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MrBrax/TwitchAutomator.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MrBrax/TwitchAutomator/issues"
  },
  "homepage": "https://github.com/MrBrax/TwitchAutomator#readme",
  "devDependencies": {
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "@types/webpack": "^4.41.21",
    "html-webpack-plugin": "^4.3.0",
    "node-sass": "^4.14.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "ts-loader": "^8.0.2",
    "typescript": "^3.9.7",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "core-js": "^3.6.5",
    "eslint": "^7.6.0",
    "sass-loader": "^9.0.3",
    "webpack": "^4.44.1"
  }
}
